<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textInfoLarge">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInfoSmall">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">""</item>
    </style>

    <style name="textBack">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">""</item>
    </style>

    <style name="fab">
        <item name="android:layout_marginTop">@dimen/xxxl</item>
        <item name="android:layout_marginEnd">@dimen/xxxl</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="editText">
        <item name="android:layout_marginStart">@dimen/s</item>
        <item name="android:ems">10</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">auto</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="textViewTitle">
        <item name="android:layout_marginBottom">@dimen/xxl</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>
</resources>